rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow read access to projects collection for all users
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to skills collection for all users
    match /skills/{skillId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to education collection for all users
    match /education/{educationId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'ADMIN_USER_ID';
    }
    
    // Note: Replace 'ADMIN_USER_ID' with your actual admin user ID
    // For production, implement more granular security rules based on your application needs
  }
}